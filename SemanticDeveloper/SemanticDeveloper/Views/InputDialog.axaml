<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="SemanticDeveloper.Views.InputDialog"
        Width="420" Height="220"
        CanResize="False"
        WindowStartupLocation="CenterOwner"
        Title="Input"
        Background="#2E2E2E"
        Icon="avares://SemanticDeveloper/Images/semantic-developer-logo-large.png">
    <Grid RowDefinitions="Auto,*,Auto,Auto" Margin="16" RowSpacing="12">
        <TextBlock x:Name="PromptText" TextWrapping="Wrap"/>
        <TextBox Grid.Row="1" x:Name="InputText"/>
        <CheckBox Grid.Row="2" x:Name="CreatePrCheckBox" Content="Create Pull Request" IsVisible="False"/>
        <StackPanel Grid.Row="3" Orientation="Horizontal" Spacing="8" HorizontalAlignment="Right">
            <Button Width="96" Click="OnCancel">Cancel</Button>
            <Button Width="96" Click="OnOk">OK</Button>
        </StackPanel>
    </Grid>
</Window>
