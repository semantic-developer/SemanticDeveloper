<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:SemanticDeveloper.Views"
        x:Class="SemanticDeveloper.MainWindow"
        x:CompileBindings="False"
        mc:Ignorable="d"
        d:DesignWidth="1200"
        d:DesignHeight="780"
        Title="Semantic Developer"
        Icon="avares://SemanticDeveloper/Images/semantic-developer-logo-large.png"
        WindowState="Maximized">
    <Grid RowDefinitions="Auto,*">
        <!-- Global header -->
        <Border Background="#2B2B2B" Padding="8,6">
            <Grid ColumnDefinitions="Auto,12,*,Auto,8,Auto,8,Auto">
                <StackPanel Orientation="Horizontal" Spacing="10" VerticalAlignment="Center">
                    <Image Source="avares://SemanticDeveloper/Images/semantic-developer-logo-large.png"
                           Width="24" Height="24"/>
                    <TextBlock Text="Semantic Developer" FontWeight="Bold" Foreground="#E6E6E6" FontSize="16"/>
                </StackPanel>
                <Border Grid.Column="1"/>
                <Border Grid.Column="2"/>
                <Button Grid.Column="3" x:Name="OpenCliSettingsButton" Foreground="#E6E6E6"
                        Click="OnOpenCliSettingsClick">CLI Settings</Button>
                <Border Grid.Column="4"/>
                <Button Grid.Column="5" x:Name="OpenAboutButton" Foreground="#E6E6E6"
                        Click="OnOpenAboutClick">About</Button>
                <Border Grid.Column="6"/>
                <Button Grid.Column="7" x:Name="OpenReadmeButton" Foreground="#E6E6E6"
                        Click="OnOpenReadmeClick" ToolTip.Tip="Open README">?</Button>
            </Grid>
        </Border>

        <!-- Sessions tab area -->
        <DockPanel Grid.Row="1" Background="#1A1A1A">
            <Border DockPanel.Dock="Top" Background="#232323" Padding="12,4">
                <StackPanel Orientation="Horizontal" Spacing="6" VerticalAlignment="Center">
                    <TabControl x:Name="SessionTabControl"
                            ItemsSource="{Binding Sessions}"
                            SelectedItem="{Binding SelectedSession, Mode=TwoWay}"
                            Margin="0"
                            Padding="0"
                            HorizontalContentAlignment="Stretch"
                            BorderThickness="0"
                            Background="Transparent"
                            MinHeight="30"
                            HorizontalAlignment="Left">
                        <TabControl.Styles>
                            <Style Selector="TabControl#SessionTabControl > TabItem">
                                <Setter Property="Padding" Value="8,2"/>
                                <Setter Property="Margin" Value="0,0,6,0"/>
                                <Setter Property="FontSize" Value="12"/>
                                <Setter Property="Foreground" Value="#E6E6E6"/>
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="BorderBrush" Value="Transparent"/>
                                <Setter Property="MinHeight" Value="0"/>
                                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                <Setter Property="VerticalContentAlignment" Value="Center"/>
                                <Setter Property="Template">
                                    <ControlTemplate TargetType="TabItem">
                                        <Border x:Name="border"
                                                Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                Padding="{TemplateBinding Padding}"
                                                Margin="{TemplateBinding Margin}">
                                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                              Content="{TemplateBinding Header}"
                                                              ContentTemplate="{TemplateBinding HeaderTemplate}"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter>
                            </Style>
                            <Style Selector="TabControl#SessionTabControl > TabItem /template/ Border#border">
                                <Setter Property="BorderBrush" Value="Transparent"/>
                                <Setter Property="BorderThickness" Value="0"/>
                            </Style>
                            <Style Selector="TabControl#SessionTabControl > TabItem:selected /template/ Border#border">
                                <Setter Property="BorderBrush" Value="#4CAF50"/>
                                <Setter Property="BorderThickness" Value="0,0,0,2"/>
                            </Style>
                            <Style Selector="TabControl#SessionTabControl > TabItem:pointerover /template/ Border#border">
                                <Setter Property="Background" Value="#2D2D2D"/>
                            </Style>
                        </TabControl.Styles>
                        <TabControl.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Header}" FontSize="12" Foreground="#E6E6E6" FontWeight="Normal"/>
                            </DataTemplate>
                        </TabControl.ItemTemplate>
                        <TabControl.ContentTemplate>
                            <DataTemplate>
                                <ContentControl IsVisible="False"/>
                            </DataTemplate>
                        </TabControl.ContentTemplate>
                    </TabControl>
                    <Button Margin="6,0,0,0"
                            Padding="6,0"
                            MinWidth="28"
                            Height="28"
                            FontSize="16"
                            VerticalAlignment="Center"
                            BorderThickness="0"
                            Background="Transparent"
                            Content="+"
                            Click="OnAddSessionClick"/>
                </StackPanel>
            </Border>
            <Border Margin="0" BorderThickness="0" Background="#1A1A1A">
                <ContentControl Content="{Binding SelectedSession.View}"/>
            </Border>
        </DockPanel>
    </Grid>
</Window>
